            </head>
    <body>
    <div class="page-login">

    <div class="login-wrapper">

        <img src="main/images/logo.png">

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email" name="email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>

            <button type="submit" class="button"><span>Login</span></button>
        </form>

        <hr>

        <p>Need an account? <a href="/signup">Signup</a></p>

    </div>

    </div>
        <script src="/main/js/flat-ui.min.js" type="text/javascript"></script>
        <script src="/main/js/global.js" type="text/javascript"></script>
        <script src="/main/js/login.js" type="text/javascript"></script>
    </body>
</html>